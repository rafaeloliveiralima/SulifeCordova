<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tecnologia.sulife2" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SulifeCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
	<preference name="android-minSdkVersion" value="28" />
	<preference name="phonegap-version" value="cli-6.5.0" />
	
	<preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <plugin name="cordova-plugin-camera" source="npm" spec="^4.1.0" />
    <plugin name="cordova-plugin-ios-camera-permissions" source="npm" spec="1.2.0" />

    <plugin name="cordova-plugin-media-capture" source="npm" spec="^3.0.3" />
    <plugin name="cordova-plugin-device-orientation" source="npm" spec="^2.0.1" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="^4.0.2" />
    <plugin name="cordova-plugin-file" source="npm" spec="~6.0.2" />
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.7.1" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="^1.11.0" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="^4.0.0" />
    <plugin name="cordova-plugin-media" source="npm" spec="^5.0.3" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="^2.0.2" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="^6.0.0" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="^2.4.3" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="^3.1.1" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />	
	
    <access origin="*" />
	<access origin="http://tempustecnologia.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
